<div class="container">
    <h1 class="mb-5">Ingresa</h1>
    <%= flash.now[:notice] if flash.now[:notice] %>
    <%= form_with(model: @user, url: sessions_path, local: true) do |f| %>

        <div class="form-row">
            <div class="field form-group col-6">
                <%= f.label :email %>
                <%= f.email_field :email,
                class: "form-control"%>
            </div>
            <div class="field form-group col-6">
                <%= f.label :password %>
                <%= f.password_field :password,
                class: "form-control"%>
            </div>
            
            <div class="col-3 pt-4">
                <%= f.submit "Ingresar", class: "btn btn-secondary" %>
            </div>
        </div>
        
    <% end  %>
</div>
